// src/app/cygnet/page.tsx
'use client';

import { useEffect } from 'react';
import TimesheetGeneratorPage from '@/components/TimesheetGeneratorPage';
import { useSettingsStore } from '@/store/use-settings-store';

export default function CygnetPage() {
  const { setUseCygnetLogo } = useSettingsStore();

  // Automatically enable Cygnet logo when this route is accessed
  useEffect(() => {
    setUseCygnetLogo(true);
  }, [setUseCygnetLogo]);

  return (
    <div className="grid grid-rows-[20px_1fr_20px] items-center p-8 pb-20 gap-16 sm:p-20 font-[family-name:var(--font-geist-sans)]">
      <main className="flex flex-col gap-8 row-start-2 items-center sm:items-start">
        <TimesheetGeneratorPage />
      </main>
    </div>
  );
}